@{
    Layout = "";
}
@model Nop.Plugin.Payments.PhonePe.Models.PaymentInfoModel

<div class="payment-info">
    <table width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(Model.DescriptionText))
                {
                    <p><strong>@Model.DescriptionText</strong></p>
                }
                <p>
                    @T("Plugins.Payments.PhonePe.PaymentInfo.Info")
                </p>
            </td>
        </tr>
    </table>
</div>